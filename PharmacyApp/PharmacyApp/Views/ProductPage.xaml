<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PharmacyApp.Views.ProductPage" Title="Информация о продукте">
    <StackLayout>
        <StackLayout>
            <Label Text="Имя" />
            <Entry Text="{Binding Path=Model.Name}" FontSize="Medium" />
            <Label Text="Категория" />
            <Entry Text="{Binding Path=Model.Category}" FontSize="Medium" />
            <Label Text="Цена" />
            <Entry Text="{Binding Path=Model.Price}" FontSize="Medium" />
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Text="Назад" Command="{Binding Path=ViewModel.BackCommand}" />
        </StackLayout>
    </StackLayout>
</ContentPage>

